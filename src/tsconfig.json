{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "build/app",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es2015", "es2017", "dom", "scripthost"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
