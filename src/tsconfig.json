{
  "compilerOptions": {
    "outDir": "build/app",
    "declaration" : false,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "typeRoots": [
      "../../node_modules/@types/"
    ],
    "types" : [
      "core-js"
  ],
  "exclude": [
    "gulpfile.ts",
    "node_modules/"
  ]
}
